<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="551dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/purple"
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:background="#673AB7" />

        <ImageView
            android:id="@+id/green"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_below="@id/purple"
            android:background="#4AC38B" />

        <ImageView
            android:id="@+id/red"
            android:layout_width="267dp"
            android:layout_height="155dp"
            android:layout_toRightOf="@id/purple"
            android:background="#FF0000" />

        <ImageView
            android:id="@+id/white"
            android:layout_width="268dp"
            android:layout_height="246dp"
            android:layout_below="@id/red"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="-129dp"
            android:background="#FFFFFF" />

        <ImageView
            android:id="@+id/blue"
            android:layout_width="269dp"
            android:layout_height="237dp"
            android:layout_below="@id/white"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="128dp"
            android:layout_toRightOf="@id/green"
            android:background="#3F51B5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/txtBtn"
        android:layout_width="353dp"
        android:layout_height="163dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#673AB7"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/vistMOMABtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moreInformationTxt"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="-55dp"
            android:text="Visit MOMA"
            android:textColorHint="#673AB7"
            app:backgroundTint="#673AB7"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/notNowBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moreInformationTxt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-55dp"
            android:layout_toRightOf="@id/vistMOMABtn"
            android:text="Not Now"
            android:textColorHint="#673AB7"
            app:backgroundTint="#673AB7"
            app:iconTint="#FFFFFF" />

        <TextView
            android:id="@+id/moreInformationTxt"
            android:layout_width="fill_parent"
            android:layout_height="188dp"
            android:background="#673AB7"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:visibility="visible" />
    </RelativeLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#050505"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>